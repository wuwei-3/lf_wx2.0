<!--pages/register/index.wxml-->
<view class="register">
<view class="r-title">用户注册</view>
  <view class="r-top">
    <van-cell-group>
      <view class="pt12">
        <van-field value="{{ username }}" label="用户名" placeholder="请输入用户名" error="{{false}}" />
      </view>
      <van-field value="{{ phone }}" label="手机号" placeholder="请输入手机号" />
    </van-cell-group>
  </view>
  <view class="r-btn">
    <van-button type="primary">立即注册</van-button>
  </view>
  <view class="r-text">*注册代表同意，请尽情使用吧！*</view>
</view>