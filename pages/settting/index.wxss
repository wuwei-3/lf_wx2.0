/* pages/settting/index.wxss */
.setting {
  width: 100%;
  height: 100%;
  padding: 8px;
  box-sizing: border-box;
  background: rgba(246, 247, 249);
}

.g-basic {
  background: white;
  padding: 0 8px;
  margin-bottom: 8px;
}

.c-row1 {
  height: 80px;
  position: relative;
  display: flex;
  align-items: center;
  border-bottom: 1px solid rgba(234, 234, 234);
}

.c-row2,
.c-row4,
.c-row3 {
  height: 56px;
  display: flex;
  align-items: center;
  border-bottom: 1px solid rgba(234, 234, 234);
}

.w-r {
  flex: 1;
  text-align: right;
}

.c-row3 {
  border: 0;
}

.c-row2 :first-child {
  width: 100px;
}

.c-row2 :last-child {
  flex: 1;
  text-align: right;
  padding-right: 8px;
}

.g-basic2 {
  padding: 0 8px;
  margin-bottom: 8px;
  background: white;
}

.c1 {
  display: flex;
  height: 56px;
  align-items: center;
}

.c-row3 {
  border: 0
}

.g-button .van-button--primary {
  width: 100% !important;
  background: #f2b940 !important;
  border: 0 !important;
}

.g-button {
  width: 100%;
  margin-top: 24px;
}

.c-icon {
  position: absolute;
  right: 0;
  width: 50px;
  height: 50px;
  border-radius: 50%;
  background: #f2b940;
  display: flex;
  align-items: center;
  justify-content: center;
}

.c-icon .manager {
  font-size: 25px;
  color: white;
}