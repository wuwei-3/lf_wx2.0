/* pages/stores/index.wxss */
.store-list {
  height: 100%;
  width: 100%;
  background: rgba(246, 247, 249);
}

.t-list {
  margin-top: 8px;
  height: calc(100% - 56px);
  overflow: auto;
  padding: 0 8px;
  box-sizing: border-box;
}

.t-main {
  background: white;
  padding: 8px 12px;
  margin-bottom: 8px;
  display: flex;
  align-items: center;
}

.r1 {
  height: 40px;
  line-height: 40px;
  font-size: 15px;
  font-weight: bold;
}

.r2,
.r3 {
  color: rgba(181, 181, 181);
}

.r2 {
  padding-bottom: 10px;
}

.m-left {
  flex: 1;
}

.m-right {
  width: 80px;
  text-align: center;
  font-size: 16px;
}